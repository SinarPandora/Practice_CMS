.col-sm-12.col-md-12.col-lg-12
    .row
        .panel.panel-default
            .panel-heading 操作面板
            .panel-body
                .panel.panel-default
                    .panel-heading
                        .input-group
                            span.input-group-addon 标题
                            input(type="text" placeholder="请输入文章标题" name="title").form-control
                    .panel-body
                        link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")
                        #editor
                            p Hello World!
                            p Some initial
                            strong bold!
                            | text
                        script(src="https://cdn.quilljs.com/1.3.6/quill.js")
                        script
                             | var quill = new Quill('#editor', {modules: {toolbar: [
                             |   [{ header: [1, 2, false] }],
                             |   ['bold', 'italic', 'underline'],
                             |   ['image', 'code-block']]},
                             |   placeholder: 'Compose an epic...',
                             |   theme: 'snow'  // or 'bubble'
                             |   });


