<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--配置 DispatcherServlet，对所有后缀为 action 的 url 进行过滤-->
    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!--修改 Spring MVC 配置文件的位置和名称-->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>config/spring-*.xml</param-value>
        </init-param>
    </servlet>
    <!--可以配置多个servlet 并指定相同或不同的配置文件-->
    <servlet-mapping>
        <!--默认名：调度服务程序-dispatcherServlet-->
        <servlet-name>dispatcherServlet</servlet-name>
        <!--设置自动捕获后缀名是 action 的请求-->
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>
    <!--强制切换字符集过滤器-->
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <!--用来指定一个具体的字符集-->
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <!--true：无论request是否指定了字符集，都是用encoding；false：如果request已指定一个字符集，则不使用encoding-->
            <param-name>forceEncoding</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <!--过滤器地址映射-->
    <filter-mapping>
        <!--过滤器名称-->
        <filter-name>encoding</filter-name>
        <!--设置过滤器对所有格式的请求都有效-->
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--由 Spring 载入的Log4j配置文件位置-->
    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>config/log4j2.yml</param-value>
    </context-param>

    <listener>
        <listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>log4jServletFilter</filter-name>
        <filter-class>org.apache.logging.log4j.web.Log4jServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>log4jServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
        <dispatcher>ASYNC</dispatcher>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>app/index.action</welcome-file>
    </welcome-file-list>

</web-app>
